extends ../layouts/app
block content
		h1(class="text-center") Add Product
		if errors 
			each error in errors
				.alert.alert-danger= error
		form(action="/admin/add-product",method="POST")
			.form-group
				label(for='name') Name:
				input.form-control(type='text', name='name' placeholder='...')
			.form-group
				label(for='name') Price:
				input.form-control(type='text', name='price' placeholder='...')
			.form-group
				label(for='name') Image:
				input.form-control(type='text', name='imgUrl' placeholder='...')
			button(class="btn btn-primary") ADD