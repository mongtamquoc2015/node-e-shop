extends ../layouts/app
block content
	.container.mx-5.mt-5
		h1(class="text-center") Login
		if errors
			each error in errors
				.alert.alert-danger= error
		form(action="/login",method="POST")
			.form-group
				label(for='name') Email
				input.form-control(type='email', name='email' placeholder='...')
			.form-group
				label(for='password') Password
				input.form-control(type='password', name='password' placeholder='...')
			.text-center
				button(class="btn btn-primary mx-5") OK
				span(class="mx-5") You don't have an account?
					a(href="/signin") Signin here
