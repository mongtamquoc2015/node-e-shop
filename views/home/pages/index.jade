extends ../layouts/app

block content 
	main
		.container
			.row
				each product in products
					.col-md-3
						.card
							img(class="card-img-top" src=`${product.image}`)
							.card-body
								.card-title= product.name
								.card-text= product.title 
								.card-btn 
									a(href=`/cart/add/${product.id}`,class="btn btn-secondary") Add to cart
									button(class="btn btn-muted") Buy

			.btn-all-product				
				a(href="/products",class="btn btn-danger") See all