extends ../layouts/app
block content
	.container.mx-5.mt-5
		h1(class="text-center") Signin
		if errors
			each error in errors
				.alert.alert-danger= error
		form(action="/signin",method="POST",enctype="multipart/form-data")
			.form-group
				label(for='name') Name
				input.form-control(type='name', name='name' placeholder='...')
			.form-group
				label(for='name') Avatar
				input.form-control-file#avatar(type='file', name='avatar' placeholder='...')
			.form-group
				label(for='name') email
				input.form-control(type='email', name='email' placeholder='...')
			.form-group
				label(for='password') password
				input.form-control(type='password', name='password' placeholder='...')
			.text-center
				button(class="btn btn-primary") OK
				span You have an account?
					a(href="/login") Login here
